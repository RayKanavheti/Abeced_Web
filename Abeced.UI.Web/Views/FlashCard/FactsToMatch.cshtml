                        @{
                            var flashcount = Model.Count();
                            var count = 0;
                            var percentage = "";
                            var firstCard = "";

                            if (flashcount >= 1)
                            {
                                foreach (var carditem in Model)
                                {
                                    percentage = ((double)count * 100 / flashcount).ToString() + "%";
                                    if (count != 1) {
                                        firstCard = "wizard-step cardContent mcard";
                                    } else {
