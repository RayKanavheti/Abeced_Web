@model IEnumerable<Abeced.UI.Web.Models.CourseModel>

@{
    ViewBag.Title = "AddorEditCard";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<style>

    .form-header {
        color: #fff;
        text-align: center;
        margin-top: 25px;
        margin-bottom: 10px;
        padding: 5px;
        /*padding:1em;*/
        border-radius: 2px;
    }

    .rounded {
        box-shadow: 0 5px 11px 0 rgba(0,0,0,.18), 0 4px 15px 0 rgba(0,0,0,.15);
    }

    textarea, input {
        max-width: none;
    }

    .deep-blue-gradient {
        background-image: linear-gradient(120deg, #e0c3fc 0%, #8ec5fc 100%);
    }
    .Course-img img{
        height:200px;
    }

</style>

<div class="form-header deep-blue-gradient rounded">
    <h3 class="text-center">Get All Courses</h3>
</div>
      


<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <!--First columnn-->
            <div style="margin-bottom: 10px; margin-top:10px" class="col-lg-4">
                <!--Card-->
                    <div class="card mb-r wow fadeIn" data-wow-delay="0.2s">
                        <!--Card image-->
                        <div class="Course-img">
                            <a href="@Url.Content("~/FlashCard/selectCardIndex?CourseID="+item.CourseId+"&CourseName="+item.name)"><img class="img-fluid img-thumbnail card-img"  src="@item.img"  alt="Course Image"/></a>
                        </div>
                        <!--Card content-->
                        <div class="card-body">
                            <!--Title-->
                            <h5 class="font-bold">
                                <strong>@item.name</strong>
                                <span class="badge badge-danger">4 Cards</span>
                            </h5>
                            <hr>
                            <h4>
                                <strong>2 Hrs 30 mins</strong>
                            </h4>
                            <!--Text-->
                            <p class="card-text mt-4">
                                @item.description
                            </p>

                            <a href="@Url.Content("~/FlashCard/selectCardIndex?CourseID="+item.CourseId+"&CourseName="+item.name)" class="btn btn-info btn-sm">Study now </a>
                        </div>
                        <!--/.Card content-->
                    </div>
                <!--/.Card-->
                </div>
            <!--First columnn-->

        }


    </div>

</div>
       



<script>
    (function () {
        new WOW().init();

    })();
        
</script>